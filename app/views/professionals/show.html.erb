<% if @current_user %>

<div id="push_down_pro" class="pusher">

  <div class="ui stackable grid">

    <div class="two wide column"></div>

    <div class="four wide column center aligned">
      <div class="ui link cards">
        <div class="card">
          <div class="image">
            <%= image_tag("avatar.png") %>
          </div>
          <div class="content">
            <div class="header"><%= @professional.name%></div>
            <div class="meta">
              <a>Current Category: <%= @professional.category.name %></a>
            </div>
          </div>
          <div class="extra content">
            <p>
              <strong>Current Services: </strong>
              <ul class="ui middle aligned divided list" id="add_service">
                <% if @services.present? %>
                  <% @services.each do |service| %>
                    <div class="item">
                      <div class="content">
                        <%= service.name %>
                      </div>
                    </div>
                  <% end %>
                <% end %>
              </ul>
            </p>
          </div>
        </div>
      </div>
    </div>

    <div class="eight wide column center aligned">
      <h3>Click on a date to request <%= @professional.name %>'s services</h3>
      <!-- SIMPLE_CALENDAR -->
      <div id="requests">
        <%= month_calendar events: @requests do |date, requests| %>
          <% if (0..2).include?(requests.length) %>
            <div>
          <% elsif (2..4).include?(requests.length) %>
            <div class="ui yellow inverted">
          <% else %>
            <div class="ui orange inverted">
          <% end %>
          <%= link_to date.to_formatted_s(:short), new_request_path(:date => date), remote: true, :class => date %>
          </div>
        <% end %>
      </div>
    </div>

    <div class="two wide column"></div>

    <div class="four wide column"></div>
    <div class="eight wide column aligned">
      <div id="request-form" style="display:none;"></div>
    </div>
    <div class="four wide column"></div>

  <div class="ui horizontal divider"></div>
</div>


<% elsif @current_professional %>

<div id="push_down" class="pusher">
  <div class="ui main text container">
    <div class="two wide column"></div>
    <div class="ui right centered grid" id="push_down_content">
      <div class="ui items">
        <div class="item">
          <a class="ui tiny image">
            <%= image_tag("reviewer.png") %>
          </a>
          <div class="content">
            <a class="header">Hi, <%=@professional.name%>!</a>
            <div class="description">
              Your last login was on xxx
            </div>
          </div>
        </div>
      </div>
    </div>
    <div class="ui horizontal divider">Welcome back!</div>
  </div>
</div>

Summary of Pro's profile
- category and services


<% end %>
