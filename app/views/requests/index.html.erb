<% if @current_professional %>
  <div id="push_down" class="pusher">
    <div class="ui main text container">
      <div class="ui horizontal divider">Manage Requests</div>
      <div class="one wide column"></div>
      <div class="ui label" id="pending">
        Request Pending
      </div>
      <div class="ui label" id="confirmed">
        Confirmed Appointment
      </div>
      <div class="ui label" id="cancelled">
        Cancelled Appointment
      </div>
      <table class="ui selectable celled table" id="pro_request_table">
        <thead>
          <tr>
            <th>Appointment with</th>
            <th>Appt. start time</th>
            <th>Appt. potential end time</th>
            <th>Details</th>
            <th>Change Status</th>
            <th>Contact (open once appointment is confirmed)</th>
            <th>Confirm Changes</th>
          </tr>
        </thead>
        <tbody>
          <tr class="warning">
            <td>
              <h4 class="ui image header">
                <%= image_tag("mini_avatar.png", class: "ui mini rounded image") %>
                <div class="content">
                  Lena
                  <div class="sub header">Beauty</div>
                </div>
              </h4>
            </td>
            <td>
              3:00pm
            </td>
            <td>
              5:00pm
            </td>
            <td>
              Blow and dry
            </td>
            <td>
              <div class="ui dropdown">
                <div class="text">Pending</div>
                  <i class="dropdown icon"></i>
                  <div class="menu">
                    <div class="item">Pending</div>
                    <div class="item">Confirm</div>
                    <div class="item">Cancel</div>
                </div>
              </div>
            </td>
            <td>
              Appointment not confirmed
            </td>
            <td>
              <button class="ui teal button">Make Changes</button>
            </td>
          </tr>
        </tbody>
        </table>
    </div>
  </div>

<% elsif @current_user %>

  <div id="push_down" class="pusher">
    <div class="ui main text container">
      <div class="ui horizontal divider">Manage Requests</div>
      <div class="one wide column"></div>
      <div class="ui label" id="pending">
        Request Pending
      </div>
      <div class="ui label" id="confirmed">
        Confirmed Appointment
      </div>
      <div class="ui label" id="cancelled">
        Cancelled Appointment
      </div>
      <table class="ui selectable celled table" id="pro_request_table">
        <thead>
          <tr>
            <th>Appointment with</th>
            <th>Appt. start time</th>
            <th>Appt. potential end time</th>
            <th>Details</th>
            <th>Change Status</th>
            <th>Contact (open once appointment is confirmed)</th>
            <th>Confirm Changes</th>
          </tr>
        </thead>
        <tbody>
          <% @requests.each do |request| %>
            <tr class="warning">
              <td>
                <h4 class="ui image header">
                  <%= image_tag("mini_avatar.png", class: "ui mini rounded image") %>
                  <div class="content">
                    Lena
                    <div class="sub header"><%= @professional.category %></div>
                  </div>
                </h4>
              </td>
              <td>
                <%= @request.start_time %>
              </td>
              <td>
                <%= @request.end_time %>
              </td>
              <td>
                <%= @request.appointment_details %>
              </td>
              <td>
                <%= @request.status %>
              </td>
              <td>
                Appointment not confirmed
              </td>
              <td>
                <button class="ui teal button" id="user_req_changes">Make Changes</button>
              </td>
            </tr>
          <% end %>
        </tbody>
        </table>
    </div>
  </div>

  <div class="ui modal user">
    <i class="close icon"></i>
    <div class="header">
      Profile Picture
    </div>
    <div class="image content">
      <div class="ui medium image">
        <img src="/images/avatar/large/chris.jpg">
      </div>
      <div class="description">
        <div class="ui header">We've auto-chosen a profile image for you.</div>
        <p>We've grabbed the following image from the <a href="https://www.gravatar.com" target="_blank">gravatar</a> image associated with your registered e-mail address.</p>
        <p>Is it okay to use this photo?</p>
      </div>
    </div>
    <div class="actions">
      <div class="ui black deny button">
        Nope
      </div>
      <div class="ui positive right labeled icon button">
        Yep, that's me
        <i class="checkmark icon"></i>
      </div>
    </div>
  </div>

<% end %>
