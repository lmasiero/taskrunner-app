<%= simple_form_for @request, remote: true do |f|   %>
  <%= f.input  :appointment_details, as: :text %>

  <div class='input-group date' id='datetimepicker1'>
  	<%= f.input  :start_time %>
    <%= f.input  :end_time %>
    <%= f.hidden_field :professional_id, :value => request.referer %>
  </div>
  <%= f.button :submit %>
<% end %>
