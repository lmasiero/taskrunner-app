<% pro_id = request.referer.slice( request.referer.index('/', -3) + 1, request.referer.length ) %>

<div class="ui middle aligned center aligned grid">
  <div class="column">
    <h2 class="ui image header">
      <i class="calendar icon"></i>
      <div class="content">
        New Service Request
      </div>
    </h2>
  </div>
</div>

<div style="margin-bottom: 50px; margin-top: 30px;">
<%= simple_form_for @request, remote: true, html: { :class => 'ui form'} do |f| %>
  <div class="field">
    <%= f.label :start_time, label: "Choose a date and time" %><br>
    <%= f.datetime_field :start_time %>
  </div>
  <div class="field">
    <%= f.label :appointment_details, label: "Describe the help you need" %><br>
    <%= f.input :appointment_details, label: false, as: :text, :rows => "2" %>
  </div>

  <%= f.hidden_field :professional_id, :value => pro_id %>

  <%= f.button :submit, :class => "ui teal button" %>
<% end %>
</div>
